{
  "manifest_version": 3,
  "name": "GRAB PRINT (Boots MVP)",
  "version": "1.0.0",
  "description": "ดึง–เลือก–พิมพ์ ใบปะหน้าสำหรับ Grab Merchant Orders พร้อม Thermal Printer Support",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms",
    "notifications",
    "activeTab"
  ],
  "host_permissions": [
    "*://merchant.grab.com/*",
    "*://*.grab.com/*",
    "http://localhost:*/*",
    "https://*.web.app/*",
    "https://*.firebaseapp.com/*"
  ],
  "action": {
    "default_title": "GRAB PRINT",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://merchant.grab.com/*", "*://*.grab.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
