rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function callerProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function callerRole() {
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        ? callerProfile().role
        : null;
    }

    function isAdmin() {
      return callerRole() == "admin";
    }

    function isSmSgm() {
      return callerRole() == "SM-SGM";
    }

    match /users/{uid} {
      allow read: if isSignedIn() && (
        request.auth.uid == uid ||
        isAdmin() ||
        (isSmSgm() && resource.data.createdByUid == request.auth.uid)
      );

      // Default: disallow direct client creation for privileged flows (use callable).
      allow create: if false;

      allow update: if isSignedIn() && (
        isAdmin() ||
        (isSmSgm() && resource.data.createdByUid == request.auth.uid
          && !(request.resource.data.role == "admin"))
      );

      allow delete: if isAdmin();
    }

    match /usernames/{uname} {
      // Needed for username -> email resolution at login
      allow read: if true;

      // Username reservation should be performed via callable (Admin SDK)
      allow create: if false;
      allow update: if false;
      allow delete: if isAdmin();
    }
  }
}