rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products: allow reads to signed-in users only, write restricted to elevated roles.
    match /products/{productId} {
      allow read: if request.auth != null && resource.data.ProductStatus is string
                  && resource.data.ProductStatus.matches('^0');
      allow write: if request.auth != null
                   && request.auth.token.role in ['admin', 'SM-SGM'];
    }

    // Upload metadata for system settings imports.
    match /upload_meta/{uploadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.role in ['admin', 'SM-SGM'];
    }

    match /adminMeta/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.role in ['admin', 'SM-SGM'];
    }

    // Fallback: deny everything else.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
