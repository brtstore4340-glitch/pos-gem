{
    "firestore": {
        "rules": "firestore.rules"
    },
    "functions": {
        "source": "functions",
        "runtime": "nodejs20",
        "region": "asia-southeast1",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" ci",
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
