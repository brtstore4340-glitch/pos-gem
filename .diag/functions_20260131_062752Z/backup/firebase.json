{
    "firestore":  {
                      "rules":  "firestore.rules"
                  },
    "functions":  [
                      {
                          "source":  "functions",
                          "runtime":  "nodejs20",
                          "predeploy":  [
                                            "npm --prefix \"$RESOURCE_DIR\" ci",
                                            "npm --prefix \"$RESOURCE_DIR\" run build --if-present"
                                        ]
                      }
                  ],
    "hosting":  {
                    "public":  "dist",
                    "ignore":  [
                                   "firebase.json",
                                   "**/.*",
                                   "**/node_modules/**"
                               ],
                    "rewrites":  [
                                     {
                                         "source":  "**",
                                         "destination":  "/index.html"
                                     }
                                 ]
                }
}
