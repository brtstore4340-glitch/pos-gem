import React, { useState, useEffect } from "react";
import { useAuth } from "../context/AuthContext";
import { APP_VERSION, APP_UPDATED } from "../constants/appMeta";

const THAI_WELCOME_MESSAGES = [
  "ยนดตอนรบเขาสระบบ Boots 4340",
  "สวสดครบ ขอใหวนนเปนวนทดในการทำงาน",
  "ระบบพรอมใชงาน กรณาเขาสระบบเพอเรมงาน",
  "มงมนบรการ เพอความพงพอใจสงสดของลกคา",
  "ตรวจสอบความถกตองของขอมลกอนเรมทำรายการ",
  "ขอบคณทรวมเปนสวนหนงของทม Boots",
  "ใสใจในทกรายละเอยด เพองานทมคณภาพ",
  "ทำงานอยางมความสข และปลอดภยนะครบ",
  "ระบบอปเดตลาสดพรอมใหบรการแลว",
  "เรมตนวนใหมอยางสดใส ดวยรอยยมบรการ"
];

export default function LoginPage() {
  const { signIn } = useAuth();
  const [usernameOrEmail, setUsernameOrEmail] = useState("");
  const [password, setPassword] = useState("");
  const [busy, setBusy] = useState(false);
  const [error, setError] = useState("");
  const [welcomeMsg, setWelcomeMsg] = useState("");

  // Select random Thai welcome message on mount
  useEffect(() => {
    const randomIndex = Math.floor(Math.random() * THAI_WELCOME_MESSAGES.length);
    setWelcomeMsg(THAI_WELCOME_MESSAGES[randomIndex]);
  }, []);

  async function onSubmit(e) {
    e.preventDefault();
    setError("");
    setBusy(true);
    try {
      await signIn(usernameOrEmail, password);
    } catch (err) {
      const msg = err && err.message ? err.message : "Login failed";
      setError(msg);
    } finally {
      setBusy(false);
    }
  }

  return (
    // Main Container: Split Screen Left/Right
    <div className="min-h-screen w-full flex flex-col md:flex-row bg-slate-950 text-slate-100 font-sans overflow-hidden">
      
      {/* ================= LEFT PANEL: Info & Visuals (Split 15/85 vertically) ================= */}
      <div className="w-full md:w-5/12 lg:w-4/12 h-screen md:h-auto relative flex flex-col p-4 md:p-6 border-b md:border-b-0 md:border-r border-slate-800 bg-slate-900 z-10 space-y-4">
        
        {/* --- Top 15%: About Program (Sunken Style) --- */}
        <div className="h-[15%] min-h-[110px] rounded-2xl bg-slate-950/40 border border-slate-800/80 shadow-[inset_0_2px_6px_rgba(0,0,0,0.5)] backdrop-blur-sm p-5 flex flex-col justify-center">
           <div>
            <h1 className="text-xl font-bold tracking-tight text-white">
              Boots <span className="text-blue-500">4340</span> Web App
            </h1>
            <div className="mt-2 flex items-center space-x-4 text-xs text-slate-400 font-mono">
               <div>
                 <span className="text-slate-600 mr-1">Ver.</span>
                 <span>{APP_VERSION || ""}</span>
               </div>
               <div className="h-3 w-px bg-slate-700"></div>
               <div>
                 <span className="text-slate-600 mr-1">Upd.</span>
                 <span>{APP_UPDATED || ""}</span>
               </div>
            </div>
          </div>
        </div>

        {/* --- Bottom 85%: Store Update (Deeper Sunken Style) --- */}
        <div className="flex-1 rounded-2xl bg-slate-950/60 border border-slate-800/90 shadow-[inset_0_4px_10px_rgba(0,0,0,0.6)] backdrop-blur-md p-6 relative overflow-hidden">
           {/* Header Label */}
           <div className="absolute top-5 left-6">
              <h3 className="text-xs font-bold uppercase text-blue-400 tracking-wider mb-1 flex items-center">
                <span className="inline-block w-2 h-2 rounded-full bg-blue-500 mr-2 animate-pulse"></span>
                Store Update
              </h3>
           </div>
           
           {/* Content Center Area */}
           <div className="absolute inset-0 flex items-center justify-center p-10">
               <div className="text-center">
                  {/* Decorative quotes */}
                  <span className="block text-4xl text-slate-700 font-serif opacity-50 mb-2"></span>
                  <p className="text-lg md:text-xl font-medium text-slate-200 leading-relaxed tracking-wide">
                    {welcomeMsg}
                  </p>
                  <span className="block text-4xl text-slate-700 font-serif opacity-50 mt-2"></span>
               </div>
           </div>

            {/* Subtle bottom watermark */}
            <div className="absolute bottom-4 right-6 opacity-10 select-none font-black text-slate-500 text-sm">
               BOOTS THAILAND
            </div>
        </div>

      </div>

      {/* ================= RIGHT PANEL: Login Form (Unchanged Logic) ================= */}
      <div className="flex-1 flex items-center justify-center p-6 md:p-12 bg-slate-950 relative">
        {/* Subtle Background Vignette */}
        <div className="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-950 to-black opacity-80 z-0 pointer-events-none"></div>
        
        <div className="w-full max-w-md z-10">
          <div className="mb-8">
            <h2 className="text-2xl font-semibold text-white mb-2">Welcome back</h2>
            <p className="text-slate-400">Please enter your credentials to access the system.</p>
          </div>

          <form onSubmit={onSubmit} className="space-y-6">
            <div className="space-y-2">
              <label className="block text-sm font-medium text-slate-300">
                Username or Email
              </label>
              <input
                value={usernameOrEmail}
                onChange={(e) => setUsernameOrEmail(e.target.value)}
                autoComplete="username"
                className="w-full px-4 py-3 rounded-lg bg-slate-900 border border-slate-700 text-slate-100 placeholder-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all shadow-sm"
                placeholder="Enter your username"
              />
            </div>

            <div className="space-y-2">
              <label className="block text-sm font-medium text-slate-300">
                Password
              </label>
              <input
                value={password}
                onChange={(e) => setPassword(e.target.value)}
                type="password"
                autoComplete="current-password"
                className="w-full px-4 py-3 rounded-lg bg-slate-900 border border-slate-700 text-slate-100 placeholder-slate-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all shadow-sm"
                placeholder="Enter your password"
              />
            </div>

            {error && (
              <div className="p-3 rounded-md bg-red-950/30 border border-red-900/50 text-red-400 text-sm flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" className="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {error}
              </div>
            )}

            <button
              type="submit"
              disabled={busy}
              className={`w-full py-3 px-4 rounded-lg text-sm font-bold text-white shadow-lg transition-all duration-200
                ${busy 
                  ? "bg-slate-700 cursor-not-allowed opacity-70" 
                  : "bg-blue-600 hover:bg-blue-500 active:transform active:scale-[0.98] hover:shadow-blue-500/20"
                }`}
            >
              {busy ? "Signing in..." : "Sign In"}
            </button>
          </form>
          
          <div className="mt-8 text-center">
             <p className="text-xs text-slate-600">
               Protected by Enterprise Security
             </p>
          </div>
        </div>
      </div>
    </div>
  );
}
